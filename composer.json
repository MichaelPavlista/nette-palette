{
  "name": "pavlista/nette-palette",
  "description": "Palette support for Nette Framework and Latte template engine",
  "keywords": ["nette", "latte", "image", "thumbnail", "watermark", "gd", "imagick"],
  "homepage": "https://github.com/MichaelPavlista/nette-palette",
  "license": "MIT",
  "authors": [
    {
      "name": "Michael Pavlista",
      "homepage": "http://www.pavlista.cz/"
    }
  ],
  "require": {
    "php": ">=7.1.0 <8.4",
    "pavlista/palette": ">=v2.9.0 <3.0",

    "nette/di": "^3.0",
    "nette/application": "^3.0",
    "nette/utils": "^3.0 || ^4",
    "latte/latte": "~2.3",
    "tracy/tracy": "~2.3"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan-nette": "^1.0",
    "phpstan/phpstan": "^1.0"
  },
  "minimum-stability": "stable",
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
    "phpstan-baseline": "vendor/bin/phpstan analyse -c phpstan.neon --generate-baseline"
  },
  "autoload": {
    "classmap": ["src/"]
  }
}